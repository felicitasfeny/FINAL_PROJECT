<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/soal3"
    tools:context=".Soal3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/burung"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/width"
            android:layout_marginTop="265dp"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding"
            android:onClick="burung"/>

        <Button
            android:id="@+id/gajah"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/width"
            android:layout_marginTop="@dimen/padding"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding"
            android:onClick="gajah"/>

        <Button
            android:id="@+id/jerapah"
            android:layout_width="@dimen/width2"
            android:layout_height="@dimen/width2"
            android:layout_marginTop="@dimen/padding"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding"
            android:onClick="jerapah"/>
    </LinearLayout>

</RelativeLayout>